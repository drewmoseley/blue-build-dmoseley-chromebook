/var/log/storage-health.log {
    daily
    rotate 14
    compress
    missingok
    notifempty
    create 0640 root adm
    dateext
    dateformat -%Y%m%d
    sharedscripts
    postrotate
        # Tell systemd-journald nothing; this is a plain file, not the journal.
        # Placeholder in case you later run rsyslog or a shipper.
        :
    endscript
}
